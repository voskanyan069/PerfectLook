<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PerfectLook" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <style name="Theme.PerfectLook.Header.Title1" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:fontFamily">@font/dancing_bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.PerfectLook.View.LeftBorder" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">82.5dp</item>
        <item name="android:layout_marginRight">85dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.PerfectLook.View.RightBorder" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">85dp</item>
        <item name="android:layout_marginRight">82.5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.PerfectLook.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>