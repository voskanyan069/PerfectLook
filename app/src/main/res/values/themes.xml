<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PerfectLook" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#dec6c5</item>
        <item name="colorPrimaryDark">#EF9A9A</item>
        <item name="colorAccent">#dec6c6</item>
        <item name="colorOnSurface">#686161</item>
    </style>

    <style name="Theme.PerfectLook.Header.Title1" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:fontFamily">@font/dancing_bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Theme.PerfectLook.Header.Title2" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Theme.PerfectLook.View.LeftBorder" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">82.5dp</item>
        <item name="android:layout_marginRight">85dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
        <item name="backgroundTint">@color/button</item>
    </style>

    <style name="Theme.PerfectLook.View.RightBorder" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">85dp</item>
        <item name="android:layout_marginRight">82.5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
        <item name="strokeColor">@color/button</item>
        <item name="backgroundTint">@color/button</item>
    </style>

    <style name="Theme.PerfectLook.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.PerfectLook.EditText.CalculatorInput" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:alpha">0.8</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:maxLength">5</item>
    </style>
</resources>